## /etc/config/firewall
## Append to it


config include
	option path '/etc/firewall.user'

config zone
	option output 'ACCEPT'
	option masq '1'
	option name 'ovpnfw'
	option network 'ovpn'
	option input 'REJECT'
	option forward 'REJECT'
	option mtu_fix '1'


## Here 'lanfw' need to be your Lan Firewall Zone
config forwarding
	option dest 'ovpnfw'
	option src 'lanfw'

